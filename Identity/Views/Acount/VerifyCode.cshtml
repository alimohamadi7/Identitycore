
@model Identity.DTOs.Account.VerifyCode

<br />

<div class="container">

    <div class="col-md-6">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <form asp-route="PostVerifyCode" asp-route-returnTo="@Model.ReturnTo">

            <input asp-for="RememberMe" type="hidden" />
            <input asp-for="Provider" type="hidden" />

            <div class="form-group">
                <input asp-for="Code" class="form-control" placeholder="Code"/>
            </div>

            <span asp-validation-for="Code" class="text-danger"></span>

            <br />

            <input asp-for="BrowserRemember"  />
            <label asp-for="BrowserRemember"></label>

            <hr />

            <button type="submit" class="btn btn-success">Verify Code</button>

        </form>

    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}




